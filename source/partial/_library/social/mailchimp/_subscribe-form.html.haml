-# If Action if not supplied - get details from Config.yaml
- if ! locals[ :action ]
    - if data.config.mailChimpPath
        - action = data.config.mailChimpPath + "?u=" + data.config.mailChimpU + "&id=" + data.config.mailChimpID + "&c=?"

-#Â Subscription Form
%form#mailChimpForm.mailChimpForm{ :action     => action,
                                   :method     => "get",
                                   :novalidate => locals[ :novalidate ] ? "novalidate" : true }

    -# Email Address Input
    = partial "./forms/input",
               :locals => { :help  => true,
                            :icon  => { :prepend => "fa-envelope" },
                            :input => { :inputGroupClass => "input-group",
                                        :name            => "EMAIL",
                                        :placeholder     => :"mailchimp.email",
                                        :type            => "email" },
                            :label => { :extraClass => "sr-only",
                                        :title      => "Email" }}

    / -# Whether to show the name elements
    - if locals[ :name ]

        -# First Name
        = partial "./forms/input",
                   :locals => { :help  => true,
                                :icon  => { :prepend => "fa-user" },
                                :input => { :inputGroupClass => "input-group",
                                            :name            => "FNAME",
                                            :placeholder     => :"mailchimp.FirstName" }}
        -# Last Name
        = partial "./forms/input",
                   :locals => { :help  => true,
                                :icon  => { :prepend => "fa-user" },
                                :input => { :inputGroupClass => "input-group",
                                            :name            => "LNAME",
                                            :placeholder     => :"mailchimp.LastName" }}

    -# Subscribe
    = partial "./bootstrap/css/button",
               :locals => { :block   => locals[ :buttonBlock ] ? true : false,
                            :context => "primary",
                            :content => :"mailchimp.button" }