-# Jumbotron
.jumbotron{ class: locals[ :extraClass ] ? extraClass : false }

    -# Bootstrap Container
    .container

        -# Bootstrap Row
        .row

            %div{ class: locals[ :columns ] ? columns : false }

                -# Title
                - if locals[ :title ]

                    %h1
                        = string title

                        -# Small Text
                        - if locals[ :small ]
                            %small{ class: locals[ :quotes ] ? "quotes" : false }
                                = string small

                -# Description
                - if locals[ :description ]
                    %p= string description