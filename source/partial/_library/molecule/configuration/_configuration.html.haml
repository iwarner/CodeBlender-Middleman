-# Capture Configuration Elements
- content_for :configuration do

    -# Dropdown to select background
    - array = [ [ "Select Background", "-1" ] ]

    - ( 1..10 ).each do | index |
        - array << [ "bg-hero#{ index }.jpg" ]

    -# Select
    = partial "./atom/select/select", locals: { array: array, name: "backgroundSelector", label: { title: "Background" } }

-# Configuration Toolbox
#skin-toolbox{ style: "right: -182px;" }

    -# Icon
    .skin-toolbox-toggle
        = icon( "fa-flask" )

    -# Panel
    .skin-toolbox-panel

        -# Heading
        = partial "./molecule/heading/heading", locals: { tag: "h5", text: "Site Options" }

        -# Form
        %form#skin-toolbox-form

            -# Yield Content
            = yield_content :configuration