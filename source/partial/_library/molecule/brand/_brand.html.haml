-# Variables
- brand = dataNav.brand

-# Show Heading
- if brand.heading.active

    -# Heading H1
    = partial "./molecule/heading/heading", locals: { icon: brand.icon.icon, href: brand.link.url, text: :"navAbove.title", itemprop: "headline" }

-# Show Image
- if brand.logo.active

    -#Â Image
    = partial "./atom/image/image",
               locals: { alt:  brand.logo.alt,
                         size: [ brand.logo.width, brand.logo.height ],
                         src:  brand.logo.url ? brand.logo.url : "logo/logo.png" }