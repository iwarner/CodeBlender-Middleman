    %hr

    -# Heading
    = partial "molecule/heading/heading", locals: { tag: "h3", text: "Tasks" }

    -#Â Create Array
    - array = { cols: [ "Task", "Section", "Date" ],
                data: locals[ :array ] ? array : cp.todo }

    -# Table
    = partial "./bootstrap/css/table",
               locals: { array:      array,
                         id:         "dataTableTodo",
                         hidden:     locals[ :hidden ] ? hidden : false,
                         footer:     true,
                         tableClass: "table-striped table-condensed" }