-# Check Array Exists
- if current_page.data.todo

    -# Heading
    = partial "./bootstrap/type/heading",
               :locals => { :small => "Complete the following",
                            :text  => "Todo",
                            :type  => "h3" }

    -# Create Array
    - array = { "columns" => [ { "label" => "Task" },
                               { "label" => "Section" },
                               { "label" => "Date" } ],
                "data"    => current_page.data.todo }

    -# Table
    = partial "./bootstrap/css/table",
               :locals => { :array      => array,
                            :tableClass => "table-striped table-condensed" }