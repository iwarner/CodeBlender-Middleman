    - src = "holder.js/200x200"

-# Image
%img{ :src   => images_dir + "/" + src,
      :alt   => alt,
      :class => locals[ :extraClass ] ? locals[ :extraClass ] : false,
      :id    => locals[ :id ]         ? locals[ :id ]         : false,
      :width => locals[ :width ]      ? locals[ :width ]      : false }