-# Title
- if ! yield_content( :metaTitle ).blank?
    - title = yield_content :metaTitle
- else
    - title = data.page.title

-# Description
- if ! yield_content( :metaDescription ).blank?
    - description = yield_content :metaDescription
- else
    - description = data.page.description

-# Site Name
%meta{ :content  => data.config.brand,
       :property => "og:site_name" }

-# Title
%meta{ :content  => title,
       :itemprop => "name",
       :property => "og:title" }

-# Description
%meta{ :content  => description,
       :itemprop => "name",
       :name     => "description",
       :property => "og:description" }

-# Type
%meta{ :content  => data.page.type,
       :property => "og:type" }

-# URL
%meta{ :content  => data.config.url + request.path,
       :itemprop => "url",
       :property => "og:url" }

-# Image
%meta{ :content  => data.page.image,
       :itemprop => "image",
       :property => "og:image" }

-# Facebook Page ID
%meta{ :content  => data.config.facebookPageId,
       :property => "fb:page_id" }

-# Facebook App ID
%meta{ :content  => data.config.facebookAppId,
       :property => "fb:app_id" }

