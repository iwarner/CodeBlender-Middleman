-# Title
- if ! defined? title
    - title = false

-# Logo
- if ! defined? logo
    - logo = false

-# Aside Icons
- if ! defined? asideIcon
    - asideIcon = false

-# Back Icons
- if ! defined? backIcon
    - backIcon = false

-# Help Icons
- if ! defined? helpIcon
    - helpIcon = false

-# Header
%header.bar-title

    -# Logo If Required
    - if logo
        .logo
            %img{ :src => "#{images_dir}/logo/logo@2x.png", :alt => "Together Bank" }

    -# Display the Title
    - if title
        .title
            = title

-# Back Icon
- if backIcon
    %nav.asideIcon
        %ul
            %li.navigationItem
                %a.previous
                    %i.icon-chevron-left-large

-# Help Icon
- if helpIcon
    %nav.asideIcon
        %ul
            %li.complimentaryItem
                %a.help
                    %i.icon-help

-# Aside Icon
- if asideIcon
    %nav.asideIcon
        %ul
            %li.navigationItem
                %a.navigationButton
                    %i.icon-menu

            %li.complimentaryItem
                %a.complimentaryButton
                    %i.icon-menu