%p
    By default, Firefox uses Google Location Services to determine your location
    by sending: your computers IP address, information about the nearby wireless
    access points, and a random client identifier, which is assigned by Google,
    that expires every 2 weeks.

%hr

-# Heading
= partial "molecule/heading/heading.haml", locals: { text: "Find your location", tag: "h2" }

%form.locationForm{ role: "form" }

    / -# Google Places Search Box
    / = partial "atom/input/input",
    /            locals: { extraClass:  "controls",
    /                      group:       [ false, "fa-location-arrow" ],
    /                      name:        "place",
    /                      label:       [ "Enter Location Form" ],
    /                      placeholder: "Place or postcode",
    /                      required:    true }

    -# Submit
    = partial "atom/button/button.haml", locals: { context: "primary", text: "Submit" }

%br
%hr

-#Â Map Container
.latLong{ hidden: true }

    -# Geo Location
    %script{ src: "http://maps.google.com/maps/api/js?sensor=false&libraries=places" }

    .gMap
    %br

    %form{ role: "form" }

        / -# Latitude
        / = partial "atom/input/input",
        /            locals: { name:        "latitude",
        /                      label:       [ "Latitude" ],
        /                      placeholder: "Latitude" }

        / -# Longitude
        / = partial "atom/input/input",
        /            locals: { name:        "longitude",
        /                      label:       [ "Longitude" ],
        /                      placeholder: "Longitude" }

    %hr

    -# Info Window
    .infoWindow

        -# Icon
        = partial "atom/icon/icon.haml", locals: { icon: "fa-shopping-cart" }

        .title The Clothes Company
        .subTitle Distance
        .text : 48.62m

        %br

        .subTitle Postcode
        .text : W2 1RH, UK

        .clearfix