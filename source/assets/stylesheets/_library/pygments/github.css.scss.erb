<%= Rouge::Themes::Github.render( scope: '.highlight' ) %>

.highlight {

    .code {
        width      : calc(100% - 50px);
        overflow-y : auto;

        pre {
            padding     : 12px;
            padding-top : 0;
        }
    }

    table {
        width        : 100%;
        table-layout : fixed;
        max-width    : 100%;
    }

    .gl {
        -webkit-touch-callout : none;
        -webkit-user-select   : none;
        -khtml-user-select    : none;
        -moz-user-select      : none;
        -ms-user-select       : none;
        user-select           : none;

        border-right : 1px solid #DDDDDD;
        color        : #999;
        text-align   : right;
    }

    .gutter {
        width : 55px;
    }

    td {
        padding : 0;
        border  : solid 1px #ddd;

    }

    pre {

        font-size     : 12px;
        border        : none;
        padding       : 0;
        line-height   : 26px;
        margin-bottom : 40px;
        white-space   : pre;
        overflow-x    : auto;
        word-break    : inherit;
        word-wrap     : inherit;

        &.lineno {
            top         : -4px;
            position    : relative;
            margin      : 0;
            padding     : 0 12px;
            line-height : 28px;
            border      : none;
            color       : #999;
        }
    }

}