-#
-# Usage
-# = wrap_layout "_library/site/sidebar" do
-#
-# @author Ian Warner <ian.warner@drykiss.com>
-##

-# Layout - Calls Sidebar Layout
= wrap_layout "_library/site/sidebar-left" do

    -# Create the Sidebar
    - content_for :sidebar do

        -# Sidebar
        - partial "./scaffolding/subnavigation"

    -# Heading
    = partial "./bootstrap/type/heading",
               :locals => { :small => current_page.data.heading.small,
                            :tag   => "h2",
                            :text  => current_page.data.heading.title }

    -# Yield
    = yield