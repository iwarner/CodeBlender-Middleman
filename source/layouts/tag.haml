-##

-# Variables
- cp      = current_page.data
- heading = current_page.data.heading

-# Article
= wrap_layout "fullWidth" do

    .container

        .row

            .col-md-3

                %aside

                    -# Tags
                    .tagCloud

                        -# Tag Cloud
                        = partial "molecule/tag-cloud/tag-cloud.haml"

                    .blogLatest

                        -# Recent Articles
                        = partial "molecule/recent/recent.haml"

            .col-md-6

                %article

                    -# Heading
                    = partial "molecule/heading/heading.haml", locals: { small: heading.small, text: heading.title, itemprop: "name" }

                    -# Yield
                    = yield

            .col-md-3

                %aside

                    -# Blog Archive
                    = partial "molecule/archive/archive.haml"