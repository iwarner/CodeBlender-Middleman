-# Blog Tags
-#
-# @usage
-# -# Tags
-# = wrap_layout "_library/tags" do
-#
-# @author Ian Warner <ian.warner@drykiss.com>
-##

-# Variables
- cp      = current_page.data
- heading = current_page.data.heading

-# Article
= wrap_layout "_library/fullWidth" do

    .container

        .row

            .col-md-3

                %aside

                    -# Tags
                    .tagCloud

                        -# Tag Cloud
                        = partial "./molecule/tag-cloud/tag-cloud"

                    .blogLatest

                        -# Recent Articles
                        = partial "./molecule/recent/recent"

            .col-md-6

                %article

                    -# Heading
                    = partial "./molecule/heading/heading", locals: { small: heading.small, text: heading.title, itemprop: "name" }

                    -# Yield
                    = yield

            .col-md-3

                %aside

                    -# Blog Archive
                    = partial "./molecule/archive/archive"