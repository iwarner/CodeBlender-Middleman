-##
-# Blog Tags
-#
-# Usage
-# = wrap_layout "_library/blog/article" do
-#
-# @author Ian Warner <ian.warner@drykiss.com>
-##

-# Variables
- cp      = current_page.data
- heading = current_page.data.heading

-# Article
= wrap_layout "_library/site/full-width" do

    .container

        .row

            .col-md-3

                %aside

                    -# Tags
                    .tagCloud

                        -# Tag Cloud
                        = tagCloud()

                    .blogLatest

                        -# Recent Articles
                        = partial "./blog/recent"

            .col-md-6

                %article

                    -# Heading
                    = partial "./bootstrap/type/heading",
                               locals: { small: heading.small,
                                         text:  heading.title }

                    -# Yield
                    = yield

            .col-md-3

                %aside

                    -# Archive
                    = partial "./blog/archive"