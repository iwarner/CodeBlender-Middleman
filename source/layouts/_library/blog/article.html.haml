-# Article
- wrap_layout "_library/site/layout" do

    .container

        .row

            .col-md-3

                %aside

                    -# Tags
                    .tagCloud

                        -# Tag Cloud
                        = tagCloud()

                    -#Â Latest Posts
                    .blogLatest

                        -# Recent Articles
                        = partial "./blog/recent"

            .col-md-6

                %article

                    -# Heading
                    = partial "./bootstrap/type/heading",
                               :locals => { :extraClass => "noMargin",
                                            :small      => current_page.data.small,
                                            :text       => current_page.data.title }

                    -# Details
                    = partial "./blog/details",
                               :locals => { :more => false }

                    -# Image
                    = partial "./blog/image"

                    -# Yield
                    = yield

                    -# Pager
                    = partial "./bootstrap/components/pager"

                    -# Discus Comments
                    = partial "./social/disqus/comments"

            .col-md-3

                %aside

                    -# Archive
                    = partial "./blog/archive"