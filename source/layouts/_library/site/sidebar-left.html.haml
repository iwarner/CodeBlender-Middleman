-# Variables
- d  = current_page.data
- dc = data.config

-# Layout - Calls Wrapper Layout
= wrap_layout "_library/site/layout" do

    .row

        -# Nav List
        .col-md-3

            -# Subnavigation
            = yield_content :sidebar

        -# Main Content
        .col-md-9.mainContent

            -# Breadcrumbs
            - if dc.breadcrumbs
                = partial "./bootstrap/components/breadcrumbs"

            -# Heading
            - if dc.heading
                = partial "./bootstrap/type/heading",
                           :locals => { :small => string( d.small ),
                                        :text  => string( d.title ) }

            -# Details
            - if dc.description
                %p= string d.description

            -# Separator
            - if dc.hr
                %hr

            -# Locals
            - if dc.locals
                = partial "./scaffolding/locals"

            -# Yield
            = yield

            -# Resources
            - if dc.resources
                = partial "./scaffolding/resources"

            -# Todo
            - if dc.todo
                = partial "./scaffolding/todo"