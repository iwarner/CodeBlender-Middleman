-# Variables
- d  = current_page.data
- dc = data.config

-# Layout - Calls Wrapper Layout
= wrap_layout "_library/site/layout" do

    .row

        -# Main Content
        .col-md-9.mainContent

            -# Breadcrumbs
            - if d.breadcrumbs
                = partial "./bootstrap/components/breadcrumbs"

            -# Heading
            = partial "./bootstrap/type/heading",
                       :locals => { :small => string( d.small ),
                                    :text  => string( d.title ) }

            -# Details
            %p= string d.description

            -# Seperator
            %hr

            -# Locals
            - if d.locals
                = partial "./scaffolding/locals"

            -# Yield
            = yield

            -# Resources
            - if dc.resources
                = partial "./scaffolding/resources"

            -# Todo
            - if dc.todo
                = partial "./scaffolding/todo"

        -# Nav List
        .col-md-3

            -# Subnavigation
            = partial "./scaffolding/subnavigation"