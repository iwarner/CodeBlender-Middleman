    (->
        s       = document.createElement("script")
        s.async = true
        s.type  = "text/javascript"
        s.src   = "//#{ dc.shortName }.disqus.com/count.js"
        (document.getElementsByTagName("HEAD")[0] or document.getElementsByTagName("BODY")[0]).appendChild s
