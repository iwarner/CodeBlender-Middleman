-# Provides a placement for content above a navigation bar
-# Should include branding, logo, strap line and background image.
-#
-# @usage
-# -# Navigation above
-# = partial "organism/nav-above/nav-above.haml"
-#
-# @category organism
-# @stub     navAbove
-# @author   Ian Warner <ian.warner@drykiss.com>
-##

-# Header navAbove
%header{ role: "banner", itemscope: true, itemtype: "http://schema.org/WPHeader" }

    -# Placed in a fluid to give full image bleed if required
    .container-fluid

        .row.navAbove

            -# Default site container
            %div{ class: data.config.container ? data.config.container : false }

                .navAbove__row

                    -# Left column
                    .navAbove__leftColumn

                        -# Brand
                        = partial "molecule/brand/brand.haml"

                    -# Right column
                    .navAbove__rightColumn

                        -# Heading H2
                        = partial "molecule/heading/heading.haml", locals: { extraClass: "text-right", tag: "h2", text: :"navAbove.strapLine", itemprop: "description" }