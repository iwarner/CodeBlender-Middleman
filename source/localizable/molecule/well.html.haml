stub : wells

heading :
    title : "Wells"

see :
    - - "Bootstrap Wells"
      - "http://getbootstrap.com/component/#wells"

locals :
    - - "text"
      - "string"
      - "required"
      - "Content of the Well"

---

-# Default
:ruby
    code = %{partial "./bootstrap/component/wells",
                      locals: { text: "Well" }}

-# Code
= partial "./organism/code/code",
           locals: { id:      1,
                     code:    code,
                     heading: { text: "Default" } }

-# Large
:ruby
    code = %{partial "./bootstrap/component/wells",
                      locals: { extraClass: "well-lg",
                                text:       "Well" }}

-# Code
= partial "./organism/code/code",
           locals: { id:      2,
                     code:    code,
                     heading: { text: "Large" } }

-# Small
:ruby
    code = %{partial "./bootstrap/component/wells",
                      locals: { extraClass: "well-sm",
                                text:       "Well" }}

-# Code
= partial "./organism/code/code",
           locals: { id:      3,
                     code:    code,
                     heading: { text: "Small" } }