    type        : "website"

heading :
    title : "Wells"

see :
    - - "Bootstrap Wells"
      - "http://getbootstrap.com/component/#wells"

locals :
    - - "text"
      - "string"
      - "required"
      - "Content of the Well"

---

- id = 1

-# Default
:ruby
    code = %{partial "./atom/well/well", locals: { text: "Well" }}

-# Code
= partial "./organism/code/code", locals: { id: id += 1, code: code, heading: { text: "Default" } }

-# Large
:ruby
    code = %{partial "./atom/well/well", locals: { extraClass: "well-lg", text: "Well" }}

-# Code
= partial "./organism/code/code", locals: { id: id += 1, code: code, heading: { text: "Large" } }

-# Small
:ruby
    code = %{partial "./atom/well/well", locals: { extraClass: "well-sm", text: "Well" }}

-# Code
= partial "./organism/code/code", locals: { id: id += 1, code: code, heading: { text: "Small" } }