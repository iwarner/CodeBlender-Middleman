---
author      : "DryKISS"
description : "Generic forgot password form"
small       : "Forgot details form"
title       : "Forgot Password"

see :
    - - "Example forgot password"
      - "http://www.keenthemes.com/preview/metronic_admin/login.html"

---

.row

    .col-md-5.col-md-offset-3

        -# Heading
        = partial "./bootstrap/type/heading",
                   :locals => { :text => "Forgot Password?",
                                :tag  => "h2" }

        -# Forgot Password Form
        %form.forgotPasswordForm{ :action => "#",
                                  :method => "post" }

            -# Email
            = partial "./forms/input",
                       :locals => { :group       => [ "fa-envelope" ],
                                    :label       => [ "Email" ],
                                    :name        => "email",
                                    :placeholder => "Enter email address",
                                    :required    => true,
                                    :type        => "email" }

            -# Submit
            = partial "bootstrap/css/button",
                       :locals => { :block   => true,
                                    :context => "primary",
                                    :content => "Submit" }

            -# Forgot Password
            .forget-password

                -# Heading
                = partial "./bootstrap/type/heading",
                           :locals => { :text => "Forgot your password?",
                                        :tag  => "h4" }

                %p
                    No worries, click

                    -# Link To
                    = link_to( "here", "javascript:;", :id => "forget-password" )

                    to reset your password.

            %hr

            -# Register
            .create-account

                -# Heading
                = partial "./bootstrap/type/heading",
                           :locals => { :text => "Create an account.",
                                        :tag  => "h4" }

                %p
                    Not registered?, click

                    -# Link To
                    = link_to( "here", "javascript:;", :id => "create-account" )

                    to create an account.