-# Default
:ruby
    code = %{partial "./bootstrap/components/list-group",
                      :locals => { :array => [ { :active => true,
                                                 :title  => lorem.words( 2 ),
                                                 :url    => "#" },
                                               { :title  => lorem.words( 2 ),
                                                 :url    => "#" } ] }}

= partial "./scaffolding/code",
           :locals => { :id      => 1,
                        :code    => code,
                        :heading => { :small => "",
                                      :text  => "Default" } }

-# With Badges
:ruby
    code = %{partial "./bootstrap/components/list-group",
                      :locals => { :array => [ { :badge  => "14",
                                                 :title  => lorem.words( 2 ),
                                                 :url    => "#" },
                                               { :active => true,
                                                 :badge  => "14",
                                                 :title  => lorem.words( 2 ),
                                                 :url    => "#" } ] }}

= partial "./scaffolding/code",
           :locals => { :id      => 2,
                        :code    => code,
                        :heading => { :small => "",
                                      :text  => "List Group With Badges" } }

-# Contextual
:ruby
    code = %{partial "./bootstrap/components/list-group",
                      :locals => { :array => [ { :title      => lorem.words( 2 ),
                                                 :url        => "#",
                                                 :contextual => "success" },
                                               { :title      => lorem.words( 2 ),
                                                 :url        => "#",
                                                 :contextual => "danger" } ] }}

= partial "./scaffolding/code",
           :locals => { :id      => 3,
                        :code    => code,
                        :heading => { :small => "",
                                      :text  => "Contextual" } }

-# Content
:ruby
    code = %{partial "./bootstrap/components/list-group",
                      :locals => { :array => [ { :badge   => "14",
                                                 :heading => lorem.words( 2 ),
                                                 :text    => lorem.words( 20 ),
                                                 :url     => "#" },
                                               { :heading => lorem.words( 2 ),
                                                 :text    => lorem.words( 20 ),
                                                 :url     => "#" } ] }}

= partial "./scaffolding/code",
           :locals => { :id      => 4,
                        :code    => code,
                        :heading => { :small => "",
                                      :text  => "Content" } }

-# Non-Linked
:ruby
    code = %{partial "./bootstrap/components/list-group",
                      :locals => { :array => [ { :title => lorem.words( 2 ) },
                                               { :title => lorem.words( 2 ) } ],
                                   :list  => true }}

= partial "./scaffolding/code",
           :locals => { :id      => 5,
                        :code    => code,
                        :heading => { :small => "",
                                      :text  => "Non-Linked" } }