/ -# Code
/ = partial "./scaffolding/code",
/            locals: { id:      1,
/                      code:    code,
/                      heading: { small: "Just an array of images",
/                                 text:  "Default" } }

-# Linked Thumbnail
:ruby
    code = %{partial "./bootstrap/components/thumbnails",
                      locals: { array: [ { image:     { src: "footer/background1.png" },
                                           thumbnail: { href: image_path( "footer/background1.png" ) } } ] }}

-# Code
= partial "./scaffolding/code",
           locals: { id:      2,
                     code:    code,
                     heading: { small: "Provide an HREF for the image",
                                text:  "Linked Thumbnail" } }

-# Captioned Thumbnail
-# Get the list of categories of the products
- blog.articles.each do | article |

    -# Capture Content
    - @captureHTML = capture_html do

        -# Blog Details
        = partial "./blog/details", locals: { current_page: article }

-# Thumbnails
= partial "./bootstrap/components/thumbnails",
           locals: { array: [ { image:     { data: { src: "holder.js/300x200/auto" }, href: "HERE" },
                                thumbnail: { caption: @captureHTML } } ] }

-# Code
:ruby
    code = %{partial "./bootstrap/components/thumbnails",
                      locals: { array: [ { image:     { data: { src: "holder.js/300x200/auto" } },
                                           thumbnail: { caption: @captureHTML, href: "HERE" } } ] }}

-# Code
= partial "./scaffolding/code",
           locals: { id:      3,
                     code:    code,
                     heading: { small: "Push an HTML element into the Tumb array",
                                text:  "Captioned Thumbnail" } }

-# Zoomix Thumbnail
:ruby
    code = %{partial "./bootstrap/components/thumbnails",
                      locals: {  array: [ { image:     { data: { src: "holder.js/300x200/auto" } },
                                            thumbnail: { zoomix: true,
                                                         href:   image_path( "footer/background1.png" ),
                                                         data:   { toggle: "lightbox" } } } ] }}

-# Code
= partial "./scaffolding/code",
           locals: { id:      4,
                     code:    code,
                     heading: { small: "Provide a Gallery",
                                text:  "Zoomix Thumbnail" } }