- id = 1

-# Default
:ruby
    code = %{partial "./organism/footer/footer", locals: { fluid: true }}

-# Code
= partial "./organism/code/code", locals: { id: id += 1, code: code, heading: { text: "Default" } }

-# Using Local Data with No Background
:ruby
    code = %{partial "./organism/footer/footer",
                      locals: { array:       current_page.data.footer,
                                fluid:       true,
                                footerClass: "noBackground text-center" }}

-#Â Code
