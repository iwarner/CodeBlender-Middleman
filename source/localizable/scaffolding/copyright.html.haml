---

-# Heading
= partial "bootstrap/type/heading",
           :locals => { :text => "Default",
                        :type => "h2" }

-# Copyright
= partial "scaffolding/copyright"

-# Code
:code
    #lang: ruby
    = partial "scaffolding/copyright"

%hr

-# Heading
= partial "bootstrap/type/heading",
           :locals => { :text => "Copyright centered text",
                        :type => "h2" }

-# Copyright
= partial "scaffolding/copyright",
           :locals => { :center => true }

-# Code
:code
    #lang: ruby
    = partial "scaffolding/copyright",
               :locals => { :center => true }

%hr

-# Heading
= partial "bootstrap/type/heading",
           :locals => { :text => "Copyright Extra Links",
                        :type => "h2" }

-# Copyright
= partial "scaffolding/copyright",
           :locals => { :array  => data.page.list,
                        :center => true }

-# Code
:code
    #lang: ruby
    = partial "scaffolding/copyright",
               :locals => { :array  => data.page.list,
                            :center => true }

%hr

-# Heading
= partial "bootstrap/type/heading",
           :locals => { :text => "Local Copyright",
                        :type => "h2" }

-# Copyright
= partial "scaffolding/copyright",
           :locals => { :copyright => "Local String Inserted" }

-# Code
:code
    #lang: ruby
    = partial "scaffolding/copyright",
               :locals => { :copyright => "Local String Inserted" }

%hr

-# Heading
= partial "bootstrap/type/heading",
           :locals => { :text => "No Year or Arrow",
                        :type => "h2" }

-# Copyright
= partial "scaffolding/copyright",
           :locals => { :copyright => "Local String Inserted",
                        :showArrow => false,
                        :showYear  => false }

-# Code
:code
    #lang: ruby
    = partial "scaffolding/copyright",
               :locals => { :copyright => "Local String Inserted",
                            :showArrow => false,
                            :showYear  => false }