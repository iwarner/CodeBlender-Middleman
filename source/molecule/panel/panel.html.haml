locals :
    - - "body"
      - "string"
      - "optional"
      - "Body text"
    - - "bodyClass"
      - "string"
      - "optional"
      - "Body class"
    - - "collapse"
      - "bool"
      - "optional"
      - "Whether the panel starts of in an collapsed state - tools should be true"
    - - "context"
      - "string"
      - "optional"
      - "Colour context for the panel, primary, success, info, warning, danger"
    - - "extraClass"
      - "string"
      - "optional"
      - "Extra class"
    - - "footer"
      - "string"
      - "optional"
      - "Footer text"
    - - "heading"
      - "array"
      - "optional"
      - "See Heading Partial"
    - - "tools"
      - "bool"
      - "optional"
      - "Whether to show the panel icon tools"

---

-# ID
- id = 0

-# Default
:ruby
    code = %{partial "molecule/panel/panel.haml", locals: { body: "Body" }}

-# Code
= partial "organism/code/code.haml", locals: { id: id += 1, code: code, heading: { text: "Default" } }

-# Full Panel
:ruby
    code = %{partial "molecule/panel/panel.haml",
                      locals: { body:    "Body",
                                context: "primary",
                                footer:  "Footer",
                                heading: { text: "Heading", tag: "h3" },
                                tools:   true }}

-# Code
= partial "organism/code/code.haml", locals: { id: id += 1, code: code, heading: { small: "Contains the Tools also", text: "Full Panel" } }

-# Panel with Image as Heading
:ruby
    code = %{partial "molecule/panel/panel.haml",
                      locals: { body:    "Body",
                                context: "primary",
                                footer:  "Footer",
                                heading: { extraClass: "text-center", image: { data: holder( "300x40" ) } },
                                tools:   true }}

-# Code
= partial "organism/code/code.haml", locals: { id: id += 1, code: code, heading: { text: "Panel with Image Heading" } }

-# Panel with HTML Body Copy
- @captureHTML = capture_html do

    %p
        Choose Provider

    -# Button
    = partial "atom/button/button.haml", locals: { text: "Primary", context: "primary" }

:ruby
    code = %{partial "molecule/panel/panel.haml",
                      locals: { body:    [ @captureHTML ],
                                context: "primary",
                                footer:  "Footer",
                                heading: { text: "Heading", tag: "h3" },
                                tools:   true }}

-# Code
= partial "organism/code/code.haml", locals: { id: id += 1, code: code, heading: { text: "Panel with HTML Body" } }