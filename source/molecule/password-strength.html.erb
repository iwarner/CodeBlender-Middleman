description : "Password strength"
title       : "Password strength"

see :
    - - "Bootstrap supported controls"
      - "http://getbootstrap.com/css/#tables-responsive"
    - - "W3 specification"
      - "http://www.w3.org/TR/html-markup/input.file.html"

---

%h2 Rule set

%ul
    %li eight or more characters long
    %li a mix of letters, numbers and symbols
    %li at least medium strength

-# Password Type
:ruby
    code = %{codeBlender "input", "atom/form/input", { help:  { text: "Enter 8 characters [a-zA-Z0-9]" },
                                icon:  { prepend: "fa-credit-card" },
                                input: { extraClass:      "password-strength form-control",
                                         inputGroupClass: "input-group form-group-password-strength",
                                         name:            "password",
                                         placeholder:     "Enter password",
                                         type:            "password" },
                                label: { title: "Password" },
                                strengthMeter: true }}

-# Code
= codeBlender "code", "molecule", { code: code, heading: { small: "Also contains some help text", text: "Password Type" } }

-# Bootstrap row
.row

    %h2
        States

    .col-md-4.col-sm-4.col-xs-4

        -# Bootstrap Columns
        .col-md-12

            -# Body Content
            - body = capture_html do

                .text-center
                    %span.xlarge
                        %i{ class: "icon-password-weak" }

            -# Panel
            = codeBlender "panel", "molecule", { body:    body,
                                 context: "primary",
                                 footer:  "Weak",
                                 tools:   true }

    .col-md-4.col-sm-4.col-xs-4

        -# Bootstrap Columns
        .col-md-12

            -# Body Content
            - body = capture_html do

                .text-center
                    %span.xlarge
                        %i{ class: "icon-password-medium" }

            -# Panel
            = codeBlender "panel", "molecule", { body:    body,
                                 context: "primary",
                                 footer:  "Medium",
                                 tools:   true }

    .col-md-4.col-sm-4.col-xs-4

        -# Bootstrap Columns
        .col-md-12

            -# Body Content
            - body = capture_html do

                .text-center
                    %span.xlarge
                        %i{ class: "icon-password-strong" }

            -# Panel
            = codeBlender "panel", "molecule", { body:    body,
                                 context: "primary",
                                 footer:  "Strong",
                                 tools:   true }
