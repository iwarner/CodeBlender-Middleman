    code = %{partial "molecule/thumbnail/thumbnail.haml",
                      locals: { array: [ { image:     { extraClass: "img-responsive", src: loremPixel('300/200') },
                                           thumbnail: { caption: "Caption", href: "HERE" } } ] }}

-# Code
= partial "organism/code/code.haml", locals: { id: id += 1, code: code, heading: { small: "Push an HTML element into the Tumb array", text: "Captioned Thumbnail" } }

-# Zoomix Thumbnail
:ruby
    code = %{partial "molecule/thumbnail/thumbnail.haml",
                      locals: {  array: [ { image:     { extraClass: "img-responsive", src: loremPixel('300/200') },
                                            thumbnail: { zoomix: true,
                                                         href:   "footer/background1.png",
                                                         data:   { toggle: "lightbox" } } } ] }}

-# Code
= partial "organism/code/code.haml", locals: { id: id += 1, code: code, heading: { small: "Provide a Gallery", text: "Zoomix Thumbnail" } }