-##
-# Login Form
-##
%form{ name: "loginForm", novalidate: true, ng: { controller: "LoginController as login" } }

    -# Email Input
    = codeBlender "input", "atom", { help: {},
                         icon:  { prepend:         "fa-envelope fa-fw" },
                         input: { name:            "loginEmail",
                                  ng:              { model: "user.email", minlength: "3" },
                                  placeholder:     "Enter Email",
                                  required:        true,
                                  type:            "email" },
                         label: { extraClass: "sr-only", title: "Email" } }

    -# Password Input
    = codeBlender "input", "atom", { help: {},
                         icon:  { prepend:         "fa-lock fa-fw" },
                         input: { autocomplete:    "off",
                                  name:            "loginPassword",
                                  ng:              { model: "user.password", minlength: "8", maxlength: "16" },
                                  pattern:         "(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$",
                                  placeholder:     "Enter Password",
                                  required:        true,
                                  type:            "password" },
                         label: { extraClass: "sr-only", title: "Password" } }

    -# Remember Me
    = codeBlender "checkbox", "atom", { input: { name: "loginRemember" }, label: { title: "Remember Me" } }

    .text-right

        -# Reset
        = codeBlender "button", "atom", { context: "link", text: "Reset", ng: { click: "reset()" }, type: "reset" }

        -# Submit
        = codeBlender "button", "atom",  { context: "primary", text: "Login", ng: { click: "save()" } }
