:ruby
    code = %{codeBlender "carousel", "molecule", { array: [ { image: { extraClass: "img-responsive", src: "home/01.jpeg" } },
                                       { image: { extraClass: "img-responsive", src: "home/02.jpeg" } } ],
                                data:  { ride: "carousel", interval: "3000" }, control: true, indicator: true }}

