-# HREF
- if ! locals[ :href ]
    - href = "https://www.facebook.com/onlyasmile/posts/206206376248041"

-# Type
- if ! locals[ :type ]
    - type = "html5"

-# Debug
-# = url
-# = type

-# HTML5
- if type == "html5"

    .fb-recommendations-bar{ :data => { :href => href } }

    -# XFBML
- elsif type == "xfbml"
    XFBML

    -# iFrame
- elsif type == "iframe"
    iFrame

    -# URL
- elsif type == "url"
    URL