##

# Source
source 'https://rubygems.org'

# Middleman
gem "middleman", '~> 3'
gem "middleman-autoprefixer"
gem "middleman-blog"
gem "middleman-livereload"
gem "middleman-minify-html"
gem "middleman-deploy"
gem "middleman-syntax"
gem "middleman-sprockets"
gem "middleman-favicon-maker"

# Tools
gem "bourbon"
gem "builder"
gem "icalendar"
gem "kramdown"
gem "launchy"
gem "less"
gem "nokogiri"
gem "oj"
gem "slim"
gem "stringex"
gem "therubyracer"
gem "thor"
gem "uglifier"
gem "vcardigan"