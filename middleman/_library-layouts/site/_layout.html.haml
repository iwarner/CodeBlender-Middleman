- # Layout - Calls Wrapper Layout

- wrap_layout "_library-layouts/site/_wrapper" do

    -# Navbar

    - if !data.config.navbar.blank? and current_page.data.navbar != false
        = partial "#{pathPartials}/bootstrap/navbar"

    -# Container

    .container

        -# Yield

        = yield

    -# Footer

    - if !data.config.footer.blank? and current_page.data.footer != false
        = partial "#{pathPartials}/site/footer"